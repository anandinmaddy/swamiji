<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:weightSum="2">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:orientation="horizontal"
           >
            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"-->
                <!--app:cardCornerRadius="@dimen/_10sdp"-->
                <!--app:cardElevation="@dimen/_5sdp">-->
                <ImageView
                    android:id="@+id/album_image_playlist"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tamil"
                    android:layout_weight="0.4"
                    />
            <!--</android.support.v7.widget.CardView>-->


            <LinearLayout
                android:layout_marginLeft="0dp"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView

                    android:id="@+id/album_image_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Playlist"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="15dp"
                    android:textColor="@color/black"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/arrowicon"
                    android:layout_marginLeft="60dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:src="@drawable/ic_rgtarrow"/>


                    <!--<TextView-->
                    <!--android:id="@+id/song_type"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="0.3"-->
                    <!--android:textSize="@dimen/_10sdp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:text="Class-2" />-->
                    <!--<View-->
                    <!--android:layout_width="1dp"-->
                    <!--android:layout_height="@dimen/_15sdp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:background="#5a000000"-->
                    <!--/>-->


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/image"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/ripple" />

    </LinearLayout>

    <!--<View-->
            <!--android:layout_width="match_parent"-->
