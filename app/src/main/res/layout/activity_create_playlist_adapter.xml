<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Adapter.createPlaylistAdapter">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--app:cardCornerRadius="@dimen/_5sdp"-->
            <!--app:cardElevation="@dimen/_5sdp">-->
            <ImageView
                android:id="@+id/ablum_image_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tamil"
                />
            <!--</android.support.v7.widget.CardView>-->

            <!--<ImageView-->
            <!--android:id="@+id/ablum_image_img"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/_45sdp"-->
            <!--android:src="@drawable/tamil"-->
            <!--android:layout_weight="0.4"-->
            <!--/>-->
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/album_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="An overview of yoga"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <ImageView
                        android:id="@+id/play_icon_imgg"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:src="@drawable/play_lectures"
                        android:layout_weight="0.2"
                        />

                    <ImageView
                        android:id="@+id/plating_track_icon"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0.2"
                        android:paddingRight="@dimen/_7sdp"
                        android:src="@drawable/playing_trackicc"
                        android:visibility="invisible" />



                    <TextView
                        android:id="@+id/song_type_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textSize="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:text="Class-2" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:background="#5a000000"
                        />
                    <TextView
                        android:id="@+id/duration_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="00:00/00:00"
                        android:layout_weight="0.5"/>

                </LinearLayout>

            </LinearLayout>
            <CheckBox
                android:layout_marginLeft="5dp"
                android:id="@+id/checkbox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@drawable/checkbox"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mild_grey" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/toolbar_drop_shadow" />

</LinearLayout>