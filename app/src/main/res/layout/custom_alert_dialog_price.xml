<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.CardView

        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView

            android:layout_marginLeft="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp">



            <ImageView

                android:id="@+id/image_price"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/intro_vedanta"

                />
        </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2.7">

                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="60"
                        android:maxLines="1"
                        android:text="Introduction to Vedanta"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/volumevalues_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume-10"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/classes_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Classes -" />

                        <TextView
                            android:id="@+id/classesvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_marginLeft="50dp"
                    android:textAlignment="viewEnd"
                    android:id="@+id/price_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.8"
                    android:text="Rs. 330"
                     />



            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/google_txt"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:layout_marginTop="150dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Play"/>
                <TextView

                    android:layout_marginLeft="7dp"
                    android:textSize="16dp"
                    android:layout_marginTop="150dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"/>
                <TextView
                    android:id="@+id/pay_txt"
                    android:layout_marginLeft="7dp"
                    android:textSize="16dp"
                    android:layout_marginTop="150dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay"/>

                <Button
                    android:background="@drawable/corener_curve_price"
                    android:textColor="@color/orange"
                    android:text="Continue"
                    android:textSize="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="150dp"/>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>