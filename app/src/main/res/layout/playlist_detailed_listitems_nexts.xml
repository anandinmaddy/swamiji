        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ablum_image_det_list_next"
                    android:layout_width="53dp"
                    android:layout_height="55dp"
                    android:src="@drawable/tamil" />
            </android.support.v7.widget.CardView>

            <!--</android.support.v7.widget.CardView>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/songView"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/album_title_det_list_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="An overview of yoga"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nowPlaying_layout"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/_9sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/musicl"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/playing_trackicc"
                        android:layout_weight="0.1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/orange"
                        android:layout_gravity="center"
                        android:text="Now Playing" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:id="@+id/textNowPlaying"
                    android:visibility="visible"
                    android:textAlignment="textStart">
                    <ImageView
                        android:id="@+id/play_icon_next"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_weight="0"
                        android:layout_gravity="center"
                        android:src="@drawable/play_arrow" />


                    <TextView
                        android:id="@+id/song_type_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:text="Class - 1 " />

