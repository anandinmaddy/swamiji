<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_28sdp"
            android:layout_marginLeft="@dimen/_28sdp"
            android:layout_marginRight="@dimen/_28sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/logo" />


            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:gravity="center"
                android:text="Enter Otp"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/otp_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/linearId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/digitId"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_16sdp"
                    app:backgroundTint="@android:color/white"></android.support.v7.widget.AppCompatEditText>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_16sdp"
                    app:backgroundTint="@android:color/white" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_16sdp"
                    app:backgroundTint="@android:color/white" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_16sdp"
                    app:backgroundTint="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/changeMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change mail"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/resendCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Resend code"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
            <!--<Button-->
            <!--android:id="@+id/createAcc"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:layout_marginTop="@dimen/_25sdp"-->
            <!--android:background="@drawable/rect_white"-->
            <!--android:text="Confirm OTP"-->
            <!--android:textColor="@color/dark_grey" />-->

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

