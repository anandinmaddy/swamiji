<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/rel1">


    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/divyanantham1" />




    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@id/image"
        android:text="Introduction"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/noOfVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@id/image"
        android:text="Volumes -"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/_10sdp" />
    <TextView
        android:id="@+id/noOfVolcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/noOfVol"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/_10sdp"
        android:text="2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_alignBaseline="@+id/image"
        android:layout_alignParentBottom="true"
       >

        <View
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"

            android:background="@color/ripple" />

    </LinearLayout>



