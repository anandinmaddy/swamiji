<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="2">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topicsView"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/_5sdp"
    android:weightSum="2">
        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--app:cardCornerRadius="@dimen/_5sdp"-->
            <!--app:cardElevation="@dimen/_5sdp">-->

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ablum_image_det_list"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/tamil"
                />
        </android.support.v7.widget.CardView>

        <!--</android.support.v7.widget.CardView>-->
    <LinearLayout
        android:layout_marginLeft="5dp"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.5"
    android:orientation="vertical"
    >
    <TextView
        android:layout_marginLeft="1dp"
    android:id="@+id/album_title_det_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:text="An overview of yoga"
    android:maxLines="1"
    android:ellipsize="end"


    android:textColor="@color/black"
    />

        <LinearLayout
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/default_layout"
            android:paddingLeft="@dimen/_11sdp"
            android:visibility="visible"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_weight="0"
                android:layout_gravity="center"

                android:src="@drawable/play_arrow" />


            <TextView
                android:id="@+id/className"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class - "
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center" />

            <TextView
                android:textColor="@color/grey"
                android:layout_marginLeft="2dp"
                android:id="@+id/song_type"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="1" />
            <TextView
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"

                android:text=" | " />

            <TextView

                android:layout_marginLeft="2dp"
                android:textColor="@color/grey"
                android:id="@+id/duration_det_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"

                android:text="00:00" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nowPlaying_layout"
            android:visibility="gone"
            android:paddingLeft="@dimen/_9sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/musicl"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/playing_trackicc"
                android:layout_weight="0.1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/orange"
                android:layout_gravity="center"
                android:text="Now Playing" />


        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/mild_grey" />

    </LinearLayout>

</LinearLayout>