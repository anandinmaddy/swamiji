<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

        <ImageView
            android:id="@+id/topics_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_image"
            android:src="@drawable/app_launcher"
            />

        </android.support.v7.widget.CardView>
        <!--</LinearLayout>-->
        <!--</android.support.v7.widget.CardView>-->

        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:minHeight="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:maxWidth="@dimen/_140sdp"
            android:textStyle="bold"
            android:text="Introduce to vedanta"
            android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/classvalues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Topics - " />

                <TextView
                    android:textSize="@dimen/_10sdp"

                    android:id="@+id/topic_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88" />



                <TextView
                    android:id="@+id/slash"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />



                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volumes - " />
                <TextView
                    android:textSize="@dimen/_10sdp"

                    android:id="@+id/volume_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10" />




            </LinearLayout>
