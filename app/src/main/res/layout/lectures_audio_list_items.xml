                    android:id="@+id/className"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:text="Class - " />

