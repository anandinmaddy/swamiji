<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/cancel_newplaylist"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Cancel"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/orange"/>

        <TextView

            android:id="@+id/new_playlist"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="New Playlist"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/done_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Done"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:textAlignment="viewEnd"
            android:layout_marginRight="15dp"
            android:textColor="@color/light_grey"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="2">
        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--app:cardCornerRadius="@dimen/_10sdp"-->
        <!--app:cardElevation="@dimen/_5sdp">-->
        <ImageView
            android:id="@+id/album_image_playlist_next_edit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vedanta"
            android:layout_weight="0.2"
            />
        <!--</android.support.v7.widget.CardView>-->
        <LinearLayout

            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:orientation="vertical"

            >
            <EditText

                android:id="@+id/album_image_title_next_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Playlist Title"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="@dimen/_10sdp"
                android:textSize="20dp"
                android:textColor="@color/light_grey"

                />
        </LinearLayout>


    </LinearLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="@color/mild_grey" />-->

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/addPlaylist"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/add_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add_green"/>

        <TextView
            android:id="@+id/text_edit"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Lectures"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>